from flask import Flask, render_template
from flask_socketio import SocketIO
import pyinotify
from gevent import monkey
monkey.patch_all()
import cgi

app = Flask(__name__)
app.config['SECRET_KEY'] = 'secret!'
socketio = SocketIO(app)
thread = None


class ModHandler(pyinotify.ProcessEvent):
    def process_default(self, evt):
	#with open('/home/amit/tryFlask/result') as f:
	#	data = f.readlines()
	file = open('/home/amit/tryFlask/result','r')
	data = file.readlines()   
	file.close() 
	socketio.emit('file_updated',{'data':data})


def background_thread():
    handler = ModHandler()
    wm = pyinotify.WatchManager()
    notifier = pyinotify.Notifier(wm, handler)
    wm.add_watch('/home/amit/tryFlask/result', pyinotify.IN_CLOSE_WRITE)
    notifier.loop()

#, proc_fun=ModHandler()
@app.route('/')
def index():
    return render_template('index.html', async_mode=socketio.async_mode)


@socketio.on('connect')
def test_connect():
    global thread
    file = open('/home/amit/tryFlask/result','r')
    data = file.readlines()   
    file.close() 
    socketio.emit('connect2',{'data':data})
 
    if thread is None:
        thread = socketio.start_background_task(target=background_thread)


if __name__ == '__main__':
    socketio.run(app, debug=True)


